<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fly.activity.dao.TypeDao">

	<select id="get" resultType="com.fly.activity.domain.TypeDO">
		select `id`,`create_time`,`type_name`,`is_del` from act_type where id = #{value}
	</select>

	<select id="list" resultType="com.fly.activity.domain.TypeDO">
		select `id`,`create_time`,`type_name`,`is_del` from act_type
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="typeName != null and typeName != ''"> and type_name = #{typeName} </if>
		  		  <if test="isDel != null"> and is_del = #{isDel} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	<select id="list1" resultType="com.fly.activity.domain.TypeDO">
		select `id`,`create_time`,`type_name`,`is_del` from act_type
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="typeName != null and typeName != ''"> and type_name = #{typeName} </if>
		  		  <if test="isDel != null"> and is_del = #{isDel} </if>
		  		</where>
	</select>
 	<select id="count" resultType="int">
		select count(*) from act_type
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="typeName != null and typeName != ''"> and type_name = #{typeName} </if>
		  		  <if test="isDel != null and isDel != ''"> and is_del = #{isDel} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.fly.activity.domain.TypeDO" useGeneratedKeys="true" keyProperty="id">
		insert into act_type
		(
			`create_time`, 
			`type_name`, 
			`is_del`
		)
		values
		(
			#{createTime}, 
			#{typeName}, 
			#{isDel}
		)
	</insert>
	 
	<update id="update" parameterType="com.fly.activity.domain.TypeDO">
		update act_type 
		<set>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="typeName != null">`type_name` = #{typeName}, </if>
			<if test="isDel != null">`is_del` = #{isDel}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from act_type where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from act_type where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>