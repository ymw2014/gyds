<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fly.signin.dao.SigninDao">

	<select id="get" resultType="com.fly.signin.domain.SigninDO">
		select `id`,`year`,`month`,`day`,`vo_id` from signin where id = #{value}
	</select>

	<select id="list" resultType="com.fly.signin.domain.SigninDO">
		select `id`,`year`,`month`,`day`,`vo_id` from signin
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="year != null and year != ''"> and year = #{year} </if>
		  		  <if test="month != null and month != ''"> and month = #{month} </if>
		  		  <if test="day != null and day != ''"> and day = #{day} </if>
		  		  <if test="voId != null and voId != ''"> and vo_id = #{voId} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from signin
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="year != null and year != ''"> and year = #{year} </if>
		  		  <if test="month != null and month != ''"> and month = #{month} </if>
		  		  <if test="day != null and day != ''"> and day = #{day} </if>
		  		  <if test="voId != null and voId != ''"> and vo_id = #{voId} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.fly.signin.domain.SigninDO">
		insert into signin
		(
			`year`, 
			`month`, 
			`day`, 
			`vo_id`
		)
		values
		(
			#{year}, 
			#{month}, 
			#{day}, 
			#{voId}
		)
	</insert>
	 
	<update id="update" parameterType="com.fly.signin.domain.SigninDO">
		update signin 
		<set>
			<if test="year != null">`year` = #{year}, </if>
			<if test="month != null">`month` = #{month}, </if>
			<if test="day != null">`day` = #{day}, </if>
			<if test="voId != null">`vo_id` = #{voId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from signin where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from signin where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>