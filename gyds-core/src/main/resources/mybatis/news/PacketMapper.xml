<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fly.news.dao.PacketDao">

	<select id="get" resultType="com.fly.news.domain.PacketDO">
		select `id`,`money`,`count`,`new_id`,`user_id`,`creat_time` from ref_packet where id = #{value}
	</select>

	<select id="list" resultType="com.fly.news.domain.PacketDO">
		select `id`,`money`,`count`,`new_id`,`user_id`,`creat_time` from ref_packet
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="money != null and money != ''"> and money = #{money} </if>
		  		  <if test="count != null and count != ''"> and count = #{count} </if>
		  		  <if test="newId != null and newId != ''"> and new_id = #{newId} </if>
		  		  <if test="userId != null and userId != ''"> and user_id = #{userId} </if>
		  		  <if test="creatTime != null and creatTime != ''"> and creat_time = #{creatTime} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from ref_packet
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="money != null and money != ''"> and money = #{money} </if>
		  		  <if test="count != null and count != ''"> and count = #{count} </if>
		  		  <if test="newId != null and newId != ''"> and new_id = #{newId} </if>
		  		  <if test="userId != null and userId != ''"> and user_id = #{userId} </if>
		  		  <if test="creatTime != null and creatTime != ''"> and creat_time = #{creatTime} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.fly.news.domain.PacketDO" useGeneratedKeys="true" keyProperty="id">
		insert into ref_packet
		(
			`money`, 
			`count`, 
			`new_id`, 
			`user_id`, 
			`creat_time`
		)
		values
		(
			#{money}, 
			#{count}, 
			#{newId}, 
			#{userId}, 
			#{creatTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.fly.news.domain.PacketDO">
		update ref_packet 
		<set>
			<if test="money != null">`money` = #{money}, </if>
			<if test="count != null">`count` = #{count}, </if>
			<if test="newId != null">`new_id` = #{newId}, </if>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="creatTime != null">`creat_time` = #{creatTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from ref_packet where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from ref_packet where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>